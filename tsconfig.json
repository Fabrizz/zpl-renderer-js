{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2018",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true
  },
  "include": ["src", "types"]
}